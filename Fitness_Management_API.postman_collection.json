							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"research",
								"demographics"
							],
							"query": [
								{
									"key": "ageRange",
									"value": "{{age_range}}",
									"description": "Age range filter (e.g., '25-34', '35-44')",
									"disabled": true
								},
								{
									"key": "gender",
									"value": "{{gender}}",
									"description": "Gender filter (optional)",
									"disabled": true
								},
								{
									"key": "objective",
									"value": "{{objective}}",
									"description": "Fitness objective filter (optional)",
									"disabled": true
								}
							]
						},
						"description": "Retrieve anonymized demographic statistics with minimum cohort size enforcement. Returns aggregated data without PII. Only research users can access this endpoint."
					},
					"response": []
				},
				{
					"name": "Get Workout Patterns",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "X-Client-ID",
